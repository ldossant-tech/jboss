<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>JBoss API Project</display-name>
    
    <!-- Configuração CORS -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.example.api.config.CorsFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- OpenAPI servlet para expor a documentação -->
    <servlet>
        <servlet-name>OpenApiServlet</servlet-name>
        <servlet-class>io.swagger.v3.jaxrs2.integration.servlet.OpenApiServlet</servlet-class>
        <init-param>
            <param-name>openApiConfiguration.resourcePackages</param-name>
            <param-value>com.example.api.resource</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>OpenApiServlet</servlet-name>
        <url-pattern>/swagger/*</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>

